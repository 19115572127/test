<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="8dp"
        android:background="#26000000"
        android:orientation="horizontal">

        <com.ydy.taole.search.ClearEditTextView
            android:id="@+id/main_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入关键词"
            android:padding="5dp"
            android:lines="1"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textSize="14sp"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/edittext_image"
            android:background="@drawable/buttonshape" />
        <TextView
            android:id="@+id/main_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_labeled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:paddingTop="13dp"
                android:text="搜索热点" />

            <com.ydy.taole.search.LabelLayoutView
                android:id="@+id/main_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.ydy.taole.search.LabelLayoutView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
